@model ControlAccesoPersonal.DataTransferObjects.Persona

@{
    ViewData["Title"] = "Insert";
    string accion = Model == null ? "Nuevo" : "Editar";

}

<div class="card mb-4">
    <div class="card-header">
        <div>

            <h1 class="text-center">@accion Persona</h1>
        </div>
    </div>
    <div class="card-body">
        <form asp-action=@accion class="form-check">
            <div class="card-column">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div hidden class="form-group">
                    <label hidden asp-for="id" class="control-label"></label>
                    <input hidden asp-for="id" class="form-control" />
                    <span hidden asp-validation-for="id" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="float-sm-left float-xl-none float-md-none col-6 col-xs-12">

                        <div class="form-group">
                            <label asp-for="rut" class="control-label"></label>
                            <input asp-for="rut" class="form-control" />
                            <span asp-validation-for="rut" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="telefono" class="control-label"></label>
                            <input asp-for="telefono" class="form-control" />
                            <span asp-validation-for="telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="correo" class="control-label"></label>
                            <input asp-for="correo" class="form-control" />
                            <span asp-validation-for="correo" class="text-danger"></span>
                        </div>


                    </div>
                    <div class="float-sm-left float-xl-none float-md-none col-6 col-xs-12">

                        <div class="form-group">
                            <label asp-for="nombre" class="control-label"></label>
                            <input asp-for="nombre" class="form-control" />
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="nombre2" class="control-label"></label>
                            <input asp-for="nombre2" class="form-control" />
                            <span asp-validation-for="nombre2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="apellido" class="control-label"></label>
                            <input asp-for="apellido" class="form-control" />
                            <span asp-validation-for="apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="apellido2" class="control-label"></label>
                            <input asp-for="apellido2" class="form-control" />
                            <span asp-validation-for="apellido2" class="text-danger"></span>
                        </div>


                    </div>
                </div>

            </div>
            <div class="form-group">

                <button asp-action=@accion asp-controller="Personas" class="btn btn-dark">@accion</button>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
