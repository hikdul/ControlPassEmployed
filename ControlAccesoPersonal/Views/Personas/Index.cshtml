@model IEnumerable<ControlAccesoPersonal.DataTransferObjects.Persona>

@{
    ViewData["Title"] = "Index";
    string mensaje = ViewBag.mensaje;
}

@*<h1>Index</h1>*@

@if (!String.IsNullOrEmpty(mensaje))
{
    <div class="alert alert-warning" role="alert">
        @mensaje
    </div>
}



<div class="card mb-4">
    <div class="card-header">
        <div>
            <a class="btn btn-dark float-right" asp-action="insert">Agregar Persona...</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.rut)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.nombre2)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.apellido)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.apellido2)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.telefono)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.correo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.rut)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.nombre2)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.apellido)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.apellido2)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.correo)
                        </td>
                        <td>

                            @Html.ActionLink("Editar", "insert", "Personas", new { id = item.id }, new { @class = "btn btn-primary text-light" })

                            @Html.ActionLink("Eliminar", "Eliminar", "Personas", new { id = item.id }, new { @class = "btn btn-danger text-light" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
