                            <input type="time" asp-for="Viernes.HoraS" value=@VierneshoraS class="form-control text-center" />
                            <span asp-validation-for="Viernes.HoraS" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="card-title card-header">
                            <h3>Sabado</h3>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sabado.HoraI" class="control-label"></label>
                            <input type="time" asp-for="Sabado.HoraI" value=@SabadohoraI class="form-control text-center" />
                            <span asp-validation-for="Sabado.HoraI" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sabado.HoraBS" class="control-label"></label>
                            <input type="time" asp-for="Sabado.HoraBS" value=@SabadohoraBS class="form-control text-center" />
                            <span asp-validation-for="Sabado.HoraBS" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sabado.HoraBI" class="control-label"></label>
                            <input type="time" asp-for="Sabado.HoraBI" value=@SabadohoraBI class="form-control text-center" />
                            <span asp-validation-for="Sabado.HoraBI" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Sabado.HoraS" class="control-label"></label>
                            <input type="time" asp-for="Sabado.HoraS" value=@SabadohoraS class="form-control text-center" />
                            <span asp-validation-for="Sabado.HoraS" class="text-danger"></span>
                        </div>
                    </div>

                </div>


                <div class="row mt-5">
                    <div class="col-4"> </div>

                    <div class="col-4">
                        <div class="card-title card-header">
                            <h3>Domingo</h3>
                        </div>
                        <div class="form-group">
                            <label asp-for="Domingo.HoraI" class="control-label"></label>
                            <input type="time" asp-for="Domingo.HoraI" value=@DomingohoraI class="form-control text-center" />
